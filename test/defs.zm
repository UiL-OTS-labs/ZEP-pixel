/*
 * This zep module adds various constants that are used throughout this
 * experiment.
 */

// Duration of the interval between two trials.
const dur       INTERTRIAL_INTERVAL             = 500ms;

// Duration of the fixation symbol presentation.
const dur       FIXATION_DURATION               = 250ms;

// Duration of the feedback presentation.
const dur       FEEDBACK_DURATION               = 250ms;

// Duration of the response interval. A value of 0ms means there is no
// timeout. A duration larger then zero means the trial will continue.
// without the participant provides a response.
//const dur       RESPONSE_DURATION               = 2000ms;       // auto-paced
const dur       RESPONSE_DURATION               = 0ms;          // self-paced

// color for correct feedback
const color     CORRECT_FEEDBACK_COLOR          = color:green;

// color for incorrect feedback
const color     INCORRECT_FEEDBACK_COLOR        = color:red;

// scaling of the size of the feedback. 0.5 = half as big, 2 is twice as big
// This only works for the cross and check mark, not the green square
real            FB_SCALING                      = 0.5;

