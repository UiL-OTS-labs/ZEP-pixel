record StimPair {
    string sound_fn;    // Filename of the sound.
    string pic_fn;      // Filename of the picture.
};

// Returns a stimulus pair
StimPair get_stim_pair(StimNum n)
{
    StimPair pair;
    pair.sound_fn   = sounds[n];
    pair.pic_fn     = images[n];
    return pair;
}

