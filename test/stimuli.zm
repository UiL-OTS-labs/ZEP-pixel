    {4, S4},
    {5, S5},
    {6, S6},
    {7, S7},
};

// Item table record.
record TestItem
{
    int         id;             // item id
    ItemType    type;           // item type
    string      wordfn;         // stimulus word sound filename
    string      prime;          // prime word
}


