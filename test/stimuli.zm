/*
 * Used to select stimuli from the sounds and images array. Hence both
 * arrays should have exactly the same number of items as there are 
 * members in enum StimNum.
 */
enum StimNum{
    S1 = 0,
    S2,
    S3,
    S4,
    S5,
    S6,
    S7,
    STIM_SENTINAL // Keep this at the end.
}


/*
 * A Audio visual unit is a pair of an image and a ".wav" file.
 *
 * They are a unit, since they belong together during an experiment.
 */
record AudioVisualUnit {
    string sound;   // The sound of a unit.
    string image;   // The image of a unit.
};

